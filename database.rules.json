{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",

    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth.uid === $uid"
      }
    },

    "auctions": {
      ".indexOn": ["ownerId", "status", "createdAt"],
      "$auctionId": {
        ".read": "auth != null",
        ".write": "auth != null && (data.child('ownerId').val() === auth.uid || !data.exists())"
      }
    },

    "bids": {
      "$auctionId": {
        ".indexOn": ["bidderId", "createdAt"],
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
